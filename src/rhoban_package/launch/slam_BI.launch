<?xml version="1.0"?>
<launch>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rhoban_package)/rviz/slam_all.rviz"/>
  <param name="/use_sim_time" value="true"/>
  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>


  <include file="$(find rhoban_package)/launch/slam_3D.launch">
    <arg name="rviz_on" value="false"/>
    <arg name="sim_on" value="false"/>
  </include>

  <include file="$(find rhoban_package)/launch/slam_2D.launch">
    <arg name="rviz_on" value="false"/>
    <arg name="sim_on" value="false"/>
    <arg name="base_frame" value="base_link"/>
    <arg name="odom_frame" value="/odom"/>
    <arg name="pub_map_odom_transform" value="false"/>
    <arg name="map_size" value="2048"/>
    <arg name="scan_topic" value="/scan" />
    <arg name="scan_subscriber_queue_size" value="10"/>
    <arg name="point" default="/rslidar_points"/>
    <!-- <arg name="point" value="/hdl_graph_slam/map_points"/>-->
  </include>



</launch>